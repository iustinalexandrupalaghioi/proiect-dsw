<%- include("partials/header.ejs")%>
<div
  class="container d-flex flex-column gap-3 py-4 px-5 justify-content-center align-items-center min-vh-100"
>
  <h1 class="text-center">Welcome to SpaceX App</h1>
  <a href="/people" class="btn btn-dark align-self-end">Who is in Space?</a>
  <div
    class="row row-cols-1 row-cols-md-2 row-cols-lg-3 row-cols-xl-4 justify-content-center"
  >
    <% articles.forEach(article => { const {id,title, image_url,
    news_summary_short, site_url} = article %>
    <div class="col mb-3">
      <div class="card" style="width: 18rem">
        <img src="<%= image_url %>" class="card-img-top" alt="<%= title %>" />
        <div class="card-body">
          <h5 class="card-title"><%= title %></h5>
          <p class="card-text"><%= news_summary_short.substring(0,100)%>...</p>
          <a
            href="<%= site_url %>"
            target="_blank"
            class="btn btn-outline-dark"
          >
            See full article
          </a>
        </div>
      </div>
    </div>
    <% }) %>
  </div>
</div>
<%- include("partials/footeer.ejs")%>
